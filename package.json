{
    "name": "quickbooks",
    "label": "Quickbooks",
    "dependencies": [
        {
            "type": "service",
            "name": "http",
            "version": "v1.8.0"
        }
    ],
    "configuration": [
        {
            "name": "clientId",
            "label": "Client ID",
            "type": "text",
            "required": true
        },
        {
            "name": "clientSecret",
            "label": "Client Secret",
            "type": "text",
            "required": true
        },
        {
            "name": "companyId",
            "label": "Company ID",
            "type": "text",
            "required": true
        },
        {
            "name": "refreshToken",
            "label": "Refresh Token",
            "type": "text",
            "required": true
        },
        {
            "name": "quickBooksEnvironment",
            "label": "QuickBooks environment",
            "type": "buttonsGroup",
            "required": true,
            "defaultValue": "SANDBOX",
            "typeOptions": {
                "allowCustom": false,
                "possibleValues": [
                    {
                        "label": "Sandbox",
                        "name": "SANDBOX"
                    },
                    {
                        "label": "Production",
                        "name": "PRODUCTION"
                    }
                ]
            }
        },
        {
            "name": "minorVersion",
            "label": "Minor Version",
            "description": "The QuickBooks Online API supports minor versions in order to provide a way for you to access incremental changes without breaking existing apps.",
            "defaultValue": 75,
            "type": "text",
            "typeOptions": {
                "validation": "number"
            }
        },
        {
            "name": "webhooksVerifierToken",
            "label": "Webhooks Verifier Token",
            "type": "text"
        },
        {
            "name": "webhook",
            "label": "Webhook URL",
            "type": "label",
            "value": "@config.WEBHOOK_URL"
        }
    ],
    "events": [
        {
            "label": "Webhook",
            "name": "webhook",
            "description": "Notifications from QuickBooks about entities"
        }
    ],
    "metadata": [
        {
            "type": "script",
            "namespace": "api",
            "path": "/scripts/api.js"
        },
        {
            "type": "script",
            "namespace": "utils",
            "path": "/scripts/utils.js"
        },
        {
            "type": "listener",
            "namespace": "webhook",
            "path": "/listeners/webhook.js"
        }
    ]
}
